<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Voice recognition -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Network communication -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Foreground service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Battery optimization exclusion request -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <!-- Keep CPU running even when screen is OFF -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Start service on boot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- mDNS / Wi-Fi discovery -->
    <uses-permission
        android:name="android.permission.NEARBY_WIFI_DEVICES"
        android:usesPermissionFlags="neverForLocation" />

    <!-- Location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- Camera -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- SMS -->
    <uses-permission android:name="android.permission.SEND_SMS" />

    <!-- App update (install APK) -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <!-- Optional hardware features -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <!-- Required to detect TTS engines and speech recognizer languages (Android 11+) -->
    <queries>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
        <intent>
            <action android:name="android.speech.RecognitionService" />
        </intent>
    </queries>

    <application
        android:name="com.openclaw.assistant.OpenClawApplication"
        android:allowBackup="false"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OpenClawAssistant"
        tools:targetApi="34">

        <!-- Main Activity -->
        <activity
            android:name="com.openclaw.assistant.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.OpenClawAssistant">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Settings Activity -->
        <activity
            android:name="com.openclaw.assistant.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.OpenClawAssistant" />

        <!-- Chat Activity -->
        <activity
            android:name="com.openclaw.assistant.ChatActivity"
            android:exported="false"
            android:theme="@style/Theme.OpenClawAssistant" />

        <!-- Voice Interaction Service (Home button long press) -->
        <service
            android:name="com.openclaw.assistant.service.OpenClawAssistantService"
            android:exported="true"
            android:permission="android.permission.BIND_VOICE_INTERACTION">
            <meta-data
                android:name="android.voice_interaction"
                android:resource="@xml/voice_interaction_service" />
            <intent-filter>
                <action android:name="android.service.voice.VoiceInteractionService" />
                <action android:name="android.intent.action.ASSIST" />
            </intent-filter>
        </service>

        <service
            android:name="com.openclaw.assistant.service.OpenClawAssistantSessionService"
            android:permission="android.permission.BIND_VOICE_INTERACTION" />

        <!-- Recognition Service (Required for VoiceInteraction) -->
        <service
            android:name="com.openclaw.assistant.service.OpenClawAssistantRecognitionService"
            android:exported="true"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_RECOGNITION_SERVICE">
            <intent-filter>
                <action android:name="android.speech.RecognitionService" />
            </intent-filter>
        </service>

        <!-- Session Foreground Service (prevents process freeze during conversation) -->
        <service
            android:name="com.openclaw.assistant.service.SessionForegroundService"
            android:exported="false"
            android:foregroundServiceType="microphone" />

        <!-- Hotword Detection Service (Ambient Listening) -->
        <service
            android:name="com.openclaw.assistant.service.HotwordService"
            android:exported="false"
            android:foregroundServiceType="microphone" />

        <!-- Node Foreground Service (device control + discovery) -->
        <service
            android:name=".service.NodeForegroundService"
            android:exported="false"
            android:foregroundServiceType="dataSync|microphone|mediaProjection" />

        <!-- FileProvider for APK installs -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Boot Receiver -->
        <receiver
            android:name="com.openclaw.assistant.receiver.BootReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- Install Result Receiver -->
        <receiver
            android:name=".receiver.InstallResultReceiver"
            android:exported="false" />

    </application>

</manifest>
